@model IDGS903_TEMA1.Models.Traductor

@{
    ViewBag.Title = "Registrar";
}

<h2>Registrar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Traductor</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ingles, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ingles, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ingles, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.español, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.español, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.español, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div>
            <div class="col-2">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-success" name="agregar" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<br />
<div class="row">
    <div class="col-2">
        <form method="get">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="text" hidden value="mostrar" />
                    <input type="submit" value="Mostrar" class="btn btn-warning" name="mostrar" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-2">
        @Html.ActionLink("Buscar", "Buscar")
    </div>
</div>
    <br />

@if (ViewBag.mostrar == true)
{
    <div>
        <table class="table table-striped table-info">
            <thead>
                <tr>
                    <th>Ingles</th>
                    <th>Español</th>
                </tr>
            </thead>
            <tbody>
                @foreach (string item in ViewBag.traducciones)
                {
                    <tr>
                        @foreach (string datos in item.Split(','))
                        {
                                <td>@datos</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}