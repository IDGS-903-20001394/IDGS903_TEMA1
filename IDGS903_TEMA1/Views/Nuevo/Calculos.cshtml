
@{
    ViewBag.Title = "Calculos";
}

<h2>Calculos</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form action="/" method="post">
                <label>Numero 1</label>
                <input type="text" name="n1" value="" required/>
                <br />
                <label>Numero 2</label>
                <input type="text" name="n2" value="" required/>
                <br /><br />
                <label>Sumar</label>
                <input type="radio" name="operacion" value="sumar" checked><br />
                <label>Restar</label>
                <input type="radio" name="operacion" value="restar"><br />
                <label>Multiplicar</label>
                <input type="radio" name="operacion" value="multiplicar"><br />
                <label>Dividir</label>
                <input type="radio" name="operacion" value="dividir"><br />
                <br />
                <input type="submit" name="name" value="calcular" />
            </form>
        </div>
        <div class="col-lg-6">
            <h1>
                El resultado es: @ViewBag.Res
            </h1>
        </div>
    </div>
</div>